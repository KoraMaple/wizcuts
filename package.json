{
  "name": "wizcuts-monorepo",
  "version": "1.0.0",
  "description": "WizCuts Barber Shop - Luxury grooming web application",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "./dev-start.sh",
    "dev:quick": "./dev-quick.sh",
    "dev:logs": "./dev-start.sh --logs",
    "dev:status": "./dev-start.sh --status",
    "dev:stop": "./dev-start.sh --stop",
    "install:all": "npm install --workspaces",
    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces",
    "lint:all": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write . --ignore-path .prettierignore",
    "format:check": "prettier --check . --ignore-path .prettierignore",
    "security:audit": "./scripts/security-audit.sh",
    "security:scan": "./scripts/secret-scanner.sh",
    "prepare": "is-ci || husky",
    "commit": "git-cz",
    "workspace:frontend": "npm run --workspace=frontend",
    "workspace:backend": "npm run --workspace=backend"
  },
  "keywords": [
    "barbershop",
    "luxury",
    "booking",
    "nextjs",
    "nestjs",
    "typescript",
    "clerk"
  ],
  "author": "WizCuts Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "is-ci": "^3.0.1",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "cd frontend && npm run lint",
      "prettier --write"
    ],
    "backend/**/*.{ts,js}": [
      "cd backend && npm run lint",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss,sass}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
