# ===================================
# WizCuts Frontend Environment Configuration
# ===================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit the actual .env files to version control

# ===================================
# CLERK AUTHENTICATION (FRONTEND)
# ===================================
# Your Clerk publishable key (public, safe to expose in frontend)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ===================================
# BACKEND API CONFIGURATION
# ===================================
# Backend API base URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:3005

# ===================================
# APPLICATION CONFIGURATION
# ===================================
# Your application's public URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment mode
NODE_ENV=development

# ===================================
# OPTIONAL: ANALYTICS & MONITORING
# ===================================
# Google Analytics tracking ID
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id

# ===================================
# OPTIONAL: EXTERNAL SERVICES
# ===================================
# Google Maps API key (for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Stripe publishable key (for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# ===================================
# SECURITY NOTES
# ===================================
# 1. Only NEXT_PUBLIC_ prefixed variables are exposed to the browser
# 2. Never put secrets in NEXT_PUBLIC_ variables
# 3. Use .env.local for local development (gitignored by default)
# 4. Use different keys for development and production
